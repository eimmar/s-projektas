{% extends 'base.html.twig' %}

{% block title %}FuelType index{% endblock %}

{% block body %}
    <h1>FuelType index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fuel_type in fuel_types %}
            <tr>
                <td>{{ fuel_type.id }}</td>
                <td>{{ fuel_type.name }}</td>
                <td>
                    <a href="{{ path('fuel_type_show', {'id': fuel_type.id}) }}">show</a>
                    <a href="{{ path('fuel_type_edit', {'id': fuel_type.id}) }}">edit</a>
                </td>
            </tr>
