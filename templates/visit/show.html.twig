{% extends 'base.html.twig' %}

{% block title %}{{ visit.id }}{% endblock %}

{% block body %}
    <h1>Visit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ visit.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ visit.visitDate }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ visit.status }}</td>
            </tr>
            <tr>
                <th>DateCreated</th>
                <td>{{ visit.dateCreated ? visit.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateUpdated</th>
                <td>{{ visit.dateUpdated ? visit.dateUpdated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('visit_index') }}">back to list</a>

{% endblock %}
